<li id="module-{{mod.id}}"
    data-region="module"
    data-module="{{mod.id}}"
    class="{{widthclass}} borderdouble border-white rounded bg-light card {{^mod.uservisible}} notavailable bg-gray020 {{/mod.uservisible}} activity {{mod.modname}} modtype_{{mod.modname}} {{mod.extraclasses}}">
    {{#editing}}
        <div style="min-height: 25px;"></div>
        {{{moveicons}}}
        <span class="float-right editoptions actions">
            {{{editoptions}}}
        </span>
    {{/editing}}
    {{#cardimage}}
        <a href="{{cmlink}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}>
            <img class="bg-light card-img-top" src="{{{cardimage}}}">
        </a>
    {{/cardimage}}
    <div class="card-body">
        <div class="">
            {{#cmname}}
                <div class="cmname">
                    <div class="float-left">{{{cmname}}}</div>
                    {{#completion}}
                        <div class="float-right completion">
                            {{{completion}}}
                        </div>
                    {{/completion}}
                </div>
            {{/cmname}}
            <div class="activityinfo">
                {{#text}}
                    <div class="text {{^mod.uservisible}} contentwithoutlink dimmed dimmed_text {{/mod.uservisible}}">
                        {{{text}}}
                    </div>
                    {{^cmname}}
                        {{#completion}}
                            <div class="completion">
                                {{{completion}}}
                            </div>
                        {{/completion}}
                    {{/cmname}}
                {{/text}}
            </div>
        </div>
        {{#mod.afterlink}}
            <span class="afterlink">
                {{{mod.afterlink}}}
            </span>
        {{/mod.afterlink}}
    </div>
    {{#showfooter}}
        <div class="card-footer rounded">
            {{#duration}}
                <span class="duration">
                    {{{duration}}}
                </span>
            {{/duration}}
            {{#availability}}
                <span class="availability">
                    {{{availability}}}
                </span>
            {{/availability}}
        </div>
    {{/showfooter}}
</li>
